{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // --- Overrides ---
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist",

    // --- Module Resolution ---
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // --- Library Declarations ---
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  // --- Overrides ---
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
