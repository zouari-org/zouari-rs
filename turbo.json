{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["backend/Cargo.lock"],
  "globalEnv": [
    "AUTH_SECRET",
    "NEXT_PUBLIC_API_URL",
    "NODE_ENV"
  ],
  "tasks": {
    "//backend:build": {
      "cache": false,
      "inputs": ["backend/**", "!backend/target/**"],
      "outputs": ["backend/target/release/app"]
    },
    "//backend:test": {
      "inputs": ["backend/**", "!backend/target/**"],
      "outputs": []
    },
    "//backend:lint": {
      "inputs": ["backend/**", "!backend/target/**"],
      "outputs": []
    },
    "build": {
      "dependsOn": ["//backend:build", "^build"],
      "outputs": [
        ".next/**",
        "dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["//backend:test", "^test"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["//backend:lint", "^lint"],
      "outputs": []
    },
    "format": {
      "dependsOn": ["^format"],
      "outputs": []
    }
  }
}
